<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyBackground"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:transitionGroup="false"
        app:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="?android:attr/actionBarSize"
            android:theme="@style/WalletPrimaryToolbar"
            android:transitionGroup="false"
            app:enableAction="false"
            app:layout_collapseMode="none"
            app:navigationIcon="@drawable/ic_arrow_back_white_compat"
            app:title="@string/title_address_item"
            app:titleTextColor="@android:color/white"
            />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/address_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/greyBackground"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/address_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Wallet.ItemHeader"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Main Address"
                    />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/row_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingStart="@dimen/margin_inset"
                    android:paddingTop="@dimen/margin_edges_half"
                    android:paddingEnd="0dp"
                    android:paddingBottom="@dimen/margin_edges_half"
                    android:transitionName="row_address"
                    >

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/_ubuntu_mono_bold"
                        android:textSize="@dimen/text_size_18"
                        android:transitionName="address_name"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/action_copy"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Mx86d167ffe6c81dd83a20e3731ed66dddaac42488"
                        />

                    <network.minter.bipwallet.internal.views.widgets.WalletButton
                        android:id="@+id/action_copy"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_copy"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/address"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/row_secured"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:paddingStart="@dimen/margin_inset"
                    android:paddingTop="@dimen/margin_edges"
                    android:paddingEnd="@dimen/margin_inset"
                    android:paddingBottom="@dimen/margin_edges"
                    android:transitionName="row_secured"
                    >

                    <TextView
                        android:id="@+id/secured_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/_ubuntu_regular"
                        android:text="Secured by"
                        android:transitionName="secured_by_label"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/secured_value"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:id="@+id/secured_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/_ubuntu_medium"
                        android:textSize="@dimen/text_size_default"
                        android:transitionName="secured_by_value"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/secured_label"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Bip Wallet"
                        />
                </android.support.constraint.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/greySeparator"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/secured_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_edges"
                android:text="@string/address_item_secured_bip_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/address_info"
                />

            <network.minter.bipwallet.internal.views.widgets.WalletButton
                android:id="@+id/action_backup_seed"
                style="@style/Wallet.Button.White"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_inset"
                android:layout_marginEnd="@dimen/margin_inset"
                android:text="Back up seed phrase"
                android:theme="@style/Wallet.Button.White"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/secured_description"
                />

            <network.minter.bipwallet.internal.views.widgets.WalletButton
                android:id="@+id/action_download_utc"
                style="@style/Wallet.Button.White"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_inset"
                android:layout_marginTop="@dimen/margin_edges"
                android:layout_marginEnd="@dimen/margin_inset"
                android:text="Download Json/Utc"
                android:theme="@style/Wallet.Button.White"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/action_backup_seed"
                />

            <network.minter.bipwallet.internal.views.widgets.WalletButton
                android:id="@+id/action_save_pk"
                style="@style/Wallet.Button.White"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_inset"
                android:layout_marginTop="@dimen/margin_edges"
                android:layout_marginEnd="@dimen/margin_inset"
                android:text="Save private key"
                android:theme="@style/Wallet.Button.White"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/action_download_utc"
                />

            <network.minter.bipwallet.internal.views.widgets.WalletButton
                android:id="@+id/action_remove"
                style="@style/Wallet.Button.Transparent.BlueBorder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_inset"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="@dimen/margin_inset"
                android:text="Remove address"
                android:theme="@style/Wallet.Button.Transparent.BlueBorder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/action_save_pk"
                />

            <Space
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_edges"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/action_remove"
                />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
